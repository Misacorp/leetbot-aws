{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@logger": ["./src/util/logger"],
      "/opt/nodejs/discord": ["src/layers/discord/nodejs/discord"],
      "/opt/nodejs/date-fns": ["src/layers/date-fns/nodejs/date-fns"],
      "/opt/nodejs/pino": ["src/layers/pino/nodejs/pino"],
      "/opt/nodejs/tweetnacl": ["src/layers/tweetnacl/nodejs/tweetnacl"]
    },
    "allowJs": false
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "cdk.out",
    "dist",
    "test",
    "src/**/*.test.ts",
    "jest.config.ts"
  ]
}
